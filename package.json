{
  "name": "legado-fish-vscode",
  "displayName": "legado阅读摸鱼",
  "description": "配合阅读app vscode摸鱼插件,用下方的控制台看小说",
  "version": "0.1.0",
  "publisher": "keeganhu",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "icon": "resources/logo.png", 
  "qna": "https://github.com/hukq16/legado-fish-vscode/issues",
  "bugs": {
    "url": "https://github.com/hukq16/legado-fish-vscode/issues",
    "email": "hukq16@gmail.com"
  },
  "keywords": [
    "legado",
    "开源阅读",
    "小说",
    "控制台",
    "terminal",
    "摸鱼"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hukq16/legado-fish-vscode.git"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "legado-fish-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "legado-fish.refreshEntry",
        "title": "Refresh",
        "icon": {
            "light": "resources/light/refresh.svg",
            "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "legado-fish.showText",
        "title": "showText"
    }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "legado-fish-reader",
          "title": "legado-reader",
          "icon": "resources/legado-fish-vscode.svg"
        }
      ],
      "panel": [
        {
          "id": "legado-panel",
          "title": "legado-reader",
          "webview": "legado-panel-webview",
          "icon": "resources/legado-fish-vscode.svg"
        }
      ]
    },
    "views": {
      "legado-fish-reader": [
        {
          "id": "legado-fish",
          "name": "booklist"
        }
      ],
      "legado-panel": [
        {
          "id": "legado-panel-webview",
          "type": "webview",
          "name": "booklist"
        }
      ]
    },
    "menus": {
      "view/title": [
          {
              "command": "legado-fish.refreshEntry",
              "when": "view == legado-fish",
              "group": "navigation"
          }
      ]
  },  
    "configuration": {
      "title": "legado-fish-vscode",
      "type": "object",
      "properties": {
        "legado-fish-vscode.webServeUrl": {
          "type": "string",
          "default": "http://192.168.151.253:1122",
          "description": "阅读APP的WEB服务访问地址"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "is-url": "^1.2.4"
  }
}
